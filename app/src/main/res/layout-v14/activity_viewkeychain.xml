<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#ff1d1d1d"
    android:clickable="true"
    android:id="@+id/keychainviewer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Search Keychain"
        android:id="@+id/titlesearch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffff5457" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dropdown1"
        android:layout_below="@+id/titlesearch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:background="#4d2d2820"
        android:spinnerMode="dropdown"
        android:entries="@android:color/holo_purple" />
</RelativeLayout>
